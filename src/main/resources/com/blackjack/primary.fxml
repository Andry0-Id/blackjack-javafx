<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.blackjack.Controller.PrimaryController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="423.0" style="-fx-background-color: green;" />
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="202.0">
         <children>
            <Button mnemonicParsing="false" style="-fx-background-color: black; -fx-pref-width: 150; -fx-pref-height: 40;" text="Play" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
            <HBox alignment="CENTER" prefHeight="69.0" prefWidth="190.0">
               <children>
                  <Button mnemonicParsing="false" style="-fx-background-color: red; -fx-pref-width: 70; -fx-pref-height: 40;" text="Hit" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <Separator opacity="0.0" prefHeight="27.0" prefWidth="0.0" />
                  <Button mnemonicParsing="false" style="-fx-background-color: orange; -fx-pref-width: 70; -fx-pref-height: 40;" text="Stand">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children></VBox>
   </children>
</HBox>
